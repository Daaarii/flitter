{
  "trailingComma": "es5",
  "tabWidth": 4,
  "semi": false,
  "singleQuote": true,
  "bracketSameLine": true,
  "arrowParens": "avoid",
  "printWidth": 130,
  "overrides": [
    {
      "files": "**/*.css",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.json",
      "options": {
        "tabWidth": 2,
        "parser": "json"
      }
    }
  ]
}
